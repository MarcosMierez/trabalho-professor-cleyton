@model Palestra.Models.Trilha
<div style="padding-left: 500px;">
    <div style="width: 400px;padding:100px;border-radius: 20px;background-color:#9ba1eb" class="divCadastrar">
        <p style="font-family:cursive;font-size: 16px">Registro de Trilha</p>
        <form action="" method="post">
            @Html.ValidationSummary(true)
            <input type="hidden" value="ID" />
            <div class="form-group">
                <label for="Nome">Nome</label>
                <input class="form-control" id="Nome" placeholder="Nome da Sala">
                @Html.ValidationMessageFor(x => x.Nome)
            </div>
            <button type="submit" class="btn btn-default" id="Register">Registrar</button>
        </form>
    </div>
</div>
