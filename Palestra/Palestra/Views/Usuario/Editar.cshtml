@model Palestra.Models.Usuario
<div class="panel panel-default">
    <div class="panel-heading">Editar Usuario</div>
    @Html.ValidationSummary(true)
    <form action="" method="post">
        <div class="formularioCadastro">
            <div class="form-group">
                <label for="@Model.Nome">Nome</label>
                <input type="text" id="Nome" class="form-control" name="Nome" value="@Model.Nome" />
                @Html.ValidationMessageFor(x => x.Nome)
            </div>

            <div class="form-group">
                <label for="Email">Email</label>
                <input type="text" id="Email" class="form-control" name="Email" value="@Model.Email" />
                @Html.ValidationMessageFor(x => x.Email)
            </div>

            <div class="form-group">
                <label for="@Model.Permissao">Permissao</label>
                <input type="text" id="Permissao" class="form-control" name="Permissao" value="@Model.Permissao" />
                @Html.ValidationMessageFor(x => x.Permissao)
            </div>


            <button type="submit" class="btn btn-success">Modificar</button>
        </div>
    </form>
</div>
