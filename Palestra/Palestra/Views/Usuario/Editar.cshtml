@model Palestra.Models.Usuario
<div class="panel panel-default">
    <div class="panel-heading">Editar Usuario</div>
    @Html.ValidationSummary(true)
    <form action="" method="post">
        <div class="formularioCadastro">
            <div class="form-group">
                <label for="@Model.Nome">Nome</label>
                <input type="text" id="Nome" class="form-control" name="Nome" value="@Model.Nome" />
                @Html.ValidationMessageFor(x => x.Nome)
            </div>

            <div class="form-group">
                <label for="Email">Email</label>
                <input type="text" id="Email" class="form-control" name="Email" value="@Model.Email" />
                @Html.ValidationMessageFor(x => x.Email)
            </div>

            <div class="checkbox">
                <label>
                    <input type="checkbox" value="trilha_ver" name="Permissao[]" id="Permissao[]" @if(Model.Permissao.Contains("trilha_ver")){<text>checked</text>}>Trilha
                </label>
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox" value="palestra_ver" name="Permissao[]" id="Permissao[]" @if (Model.Permissao.Contains("palestra_ver")) { <text> checked</text>} >Palestra
                </label>
            </div>

            <div class="checkbox">
                <label>
                    <input type="checkbox" value="palestrante_ver" name="Permissao[]" id="Permissao[]" @if (Model.Permissao.Contains("palestrante_ver")) { <text> checked</text>} >Palestrante
                </label>
            </div>

            <div class="checkbox">
                <label>
                    <input type="checkbox" value="usuario_ver" name="Permissao[]" id="Permissao[]" @if (Model.Permissao.Contains("usuario_ver")) { <text> checked</text>} >Usuario
                </label>
            </div>


            <button type="submit" class="btn btn-success">Modificar</button>
        </div>
    </form>
</div>
