@model Palestra.Models.Usuario
<div class="panel panel-default">
    <div class="panel-heading">Cadastrar Trilha de Palestras</div>
    @Html.ValidationSummary(true)
    <form action="" method="post">
        <div class="formularioCadastro">
            <div class="form-group">
                <label for="@Model.Nome">Nome</label>
                <input type="text" id="Nome" class="form-control" name="Nome" />
                @Html.ValidationMessageFor(x => x.Nome)
            </div>

            <div class="form-group">
                <label for="Senha">Senha</label>
                <input type="password" id="Senha" class="form-control" name="Senha" value="@Model.Senha" />
                @Html.ValidationMessageFor(x => x.Senha)
            </div>

            <div class="form-group">
                <label for="Email">Email</label>
                <input type="text" id="Email" class="form-control" name="Email" value="@Model.Email" />
                @Html.ValidationMessageFor(x => x.Email)
            </div>

            <div class="checkbox">
                <label>
                    <input type="checkbox" value="trilha_ver" name="Permissao[]" id="Permissao[]" />Trilha
                </label>
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox" value="palestra_ver" name="Permissao[]" id="Permissao[]" />Palestra
                </label>
            </div>

            <div class="checkbox">
                <label>
                    <input type="checkbox" value="palestrante_ver" name="Permissao[]" id="Permissao[]" />Palestrante
                </label>
            </div>

            <div class="checkbox">
                <label>
                    <input type="checkbox" value="usuario_ver" name="Permissao[]" id="Permissao[]" />Usuario
                </label>
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox" value="usuario_ver" name="Permissao[]" id="Permissao[]" />Sala
                </label>
            </div>
            <button type="submit" class="btn btn-success">Cadastrar</button>
        </div>
    </form>
</div>
