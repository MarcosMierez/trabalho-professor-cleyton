@model Palestra.ViewModel.PalestranteViewModel
<div class="panel panel-default">
    <div class="panel-heading">Alterar Registro-Palestrante</div>
    @Html.ValidationSummary(true)
    <form action="" method="post" enctype="multipart/form-data">
        <div class="formularioCadastro">
            <div class="form-group">
                <label for="@Model.Nome">Nome</label>
                <input type="text" id="Nome" class="form-control" name="Nome" value="@Model.Nome"/>
                @Html.ValidationMessageFor(x => x.Nome)
                <br />
                <label for="Twitter">Twitter</label>
                <input type="text" id="Twitter" class="form-control" name="Twitter" value="@Model.Twitter"/>
                @Html.ValidationMessageFor(x => x.Twitter)
                <br />
                <label for="Bio">Biografia</label>
                <textarea id="Bio" name="Bio">@Model.Bio</textarea>   
                @Html.ValidationMessageFor(x => x.Bio)
                <br />
                <label for="Bio">Foto</label>
                <input type="file" id="Foto" class="form-control" name="Foto" value="@Model.Foto" />
                @Html.ValidationMessageFor(x => x.Foto)
            </div>
            <br />

            <button type="submit" class="btn btn-success">Alterar</button>
        </div>
    </form>
</div>
