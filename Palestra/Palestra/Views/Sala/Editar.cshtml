@model Palestra.Models.Sala
<div class="panel panel-default">
    <div class="panel-heading">Editar Sala</div>
    @Html.ValidationSummary(true)
    <form action="" method="post">
        <div class="formularioCadastro">
            <div class="form-group">
                <label for="@Model.Nome">Nome</label>
                <input type="text" id="Nome" class="form-control" name="Nome" value="@Model.Nome"/>
                @Html.ValidationMessageFor(x => x.Nome)
                <br />
                <label for="Numero">Numero</label>

                <input type="text" id="Numero" class="form-control" name="Numero" value="@Model.Numero"/>
                @Html.ValidationMessageFor(x => x.Numero)
            </div>
            <button type="submit" class="btn btn-success">Modificar</button>
        </div>
    </form>
</div>